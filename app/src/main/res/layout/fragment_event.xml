<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pcc.alizanganeh.aihmultisportweekendapp.fragments.EventFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/mid_snd_dp"
                android:layout_marginTop="@dimen/mid_snd_dp"
                android:text="@string/half_marathon"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/title"
                android:layout_marginTop="@dimen/min_dp"
                android:adjustViewBounds="true"
                android:src="@drawable/runner_swimmer" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/imageView"
                android:background="@color/colorRed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/min_dp"
                    android:background="@drawable/round_solid_white_background">

                    <LinearLayout
                        android:id="@+id/date_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/mid_snd_dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="@string/date_title"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="@string/saturday"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/date_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="8"
                            android:text="@string/sat_date"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cost_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_cost"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/cost"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content_dollar_sign"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1.5"
                            android:text="$"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/content_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:text="75"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/free_of_charge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="7"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorRed"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/swim_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cost_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_swim"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/swim"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content_swim"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/min_dp"
                            android:layout_weight="7"
                            android:text="@string/sprint_swim_text"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bike_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/swim_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_bike"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/bike"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content_bike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/min_dp"
                            android:layout_weight="8"
                            android:text="@string/sprint_bike_text"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/run_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bike_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/title_run"
                            android:layout_width="@dimen/fifty_dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:text="@string/run"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/content_run"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="@dimen/min_dp"
                            android:layout_weight="8"
                            android:text="@string/sprint_run_text"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/registration_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/run_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="@dimen/min_dp"
                        android:layout_marginBottom="@dimen/mid_dp"
                        android:background="@drawable/round_red_background"
                        android:onClick="onClickRegistration"
                        android:text="@string/registration"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </ScrollView>


</FrameLayout>

