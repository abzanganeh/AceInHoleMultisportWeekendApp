<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pcc.alizanganeh.aihmultisportweekendapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.FirstPageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MainActivity"></meta-data>
        </activity>
        <activity android:name=".ui.LongCourseActivity" />
        <activity android:name=".ui.OlympicActivity" />
        <activity android:name=".ui.TenKActivity" />
        <activity android:name=".ui.HalfMarathonActivity" />
        <activity android:name=".ui.SprintActivity" />
        <activity android:name=".ui.TryATriActivity" />
        <activity android:name=".ui.WhatToBringActivity" />
        <activity android:name=".ui.RegistrationActivity" />
        <activity android:name=".ui.FAQActivity" />
        <activity android:name=".ui.EventViewHolderActivity"></activity>
    </application>

</manifest>